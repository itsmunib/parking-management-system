<%- include('partials/header') %>
<h2>Parking Lots</h2>
<% if (typeof error !== 'undefined' && error && error !== 'null') { %>
  <div class="alert alert-danger"><%= error %></div>
<% } %>
<% if (user && user.role === 'super_admin') { %>
  <a href="/lots/create" class="btn btn-primary mb-3">Create New Parking Lot</a>
<% } %>
<% if (Array.isArray(lots) && lots.length > 0) { %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% lots.forEach(function(lot) { %>
        <tr>
          <td><%= lot && lot.name ? lot.name : 'N/A' %></td>
          <td>
            <form action="/lots/select/<%= lot && lot.id ? lot.id : '' %>" method="POST" style="display: inline;">
              <button type="submit" class="btn btn-primary">Select</button>
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<% } else { %>
  <p>No parking lots available.</p>
<% } %>
<%- include('partials/footer') %>