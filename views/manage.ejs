<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Parking System - Badi Parking Management System</title>
  <!-- Bootstrap CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome for Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Roboto', sans-serif;
      background-color: #f4f6f9;
      margin: 0;
      padding: 0;
    }
    /* Sidebar Styles */
    .sidebar {
      position: fixed;
      top: 0;
      left: 0;
      height: 100%;
      width: 250px;
      background-color: #1a252f;
      color: #ffffff;
      padding-top: 20px;
      transition: all 0.3s;
    }
    .sidebar .navbar-brand {
      font-size: 1.5rem;
      font-weight: 700;
      padding: 20px 30px;
      display: block;
      color: #ffffff;
      text-align: center;
      border-bottom: 1px solid #2c3b4e;
    }
    .sidebar .nav-link {
      color: #a4b0be;
      padding: 15px 30px;
      font-size: 1.1rem;
      display: flex;
      align-items: center;
      transition: all 0.3s;
    }
    .sidebar .nav-link i {
      margin-right: 10px;
    }
    .sidebar .nav-link:hover, .sidebar .nav-link.active {
      color: #ffffff;
      background-color: #2c3b4e;
    }
    /* Main Content Styles */
    .main-content {
      margin-left: 250px;
      padding: 30px;
      min-height: 100vh;
      background-color: #f4f6f9;
    }
    .page-header {
      margin-bottom: 30px;
    }
    .page-header h2 {
      font-weight: 700;
      color: #2c3b4e;
    }
    /* Card Styles for Forms and Tables */
    .manage-card {
      background-color: #ffffff;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      padding: 30px;
      margin-bottom: 30px;
    }
    .manage-card h4 {
      font-weight: 700;
      color: #2c3b4e;
      margin-bottom: 20px;
    }
    .manage-card .form-group {
      margin-bottom: 20px;
    }
    .manage-card .form-group label {
      font-weight: 500;
      color: #2c3b4e;
      margin-bottom: 5px;
      display: block;
    }
    .manage-card .form-control {
      border-radius: 5px;
      border: 1px solid #ced4da;
      padding: 10px;
      font-size: 1rem;
      transition: border-color 0.3s;
    }
    .manage-card .form-control:focus {
      border-color: #2c3b4e;
      box-shadow: 0 0 5px rgba(44, 59, 78, 0.2);
    }
    .manage-card .btn-primary {
      background-color: #2c3b4e;
      border-color: #2c3b4e;
      padding: 10px 20px;
      font-weight: 500;
      border-radius: 5px;
      transition: background-color 0.3s;
    }
    .manage-card .btn-primary:hover {
      background-color: #3b4a5a;
      border-color: #3b4a5a;
    }
    .manage-card .btn-secondary {
      background-color: #e9ecef;
      color: #2c3b4e;
      border-color: #e9ecef;
      padding: 10px 20px;
      font-weight: 500;
      border-radius: 5px;
      transition: background-color 0.3s;
    }
    .manage-card .btn-secondary:hover {
      background-color: #d3d7da;
      border-color: #d3d7da;
    }
    /* Table Styles */
    .category-table {
      width: 100%;
      border-collapse: separate;
      border-spacing: 0;
    }
    .category-table thead th {
      background-color: #2c3b4e;
      color: #ffffff;
      padding: 15px;
      font-weight: 500;
      text-align: left;
      border-bottom: 2px solid #dee2e6;
    }
    .category-table thead th:first-child {
      border-top-left-radius: 8px;
    }
    .category-table thead th:last-child {
      border-top-right-radius: 8px;
    }
    .category-table tbody tr {
      transition: background-color 0.3s;
    }
    .category-table tbody tr:hover {
      background-color: #f8f9fa;
    }
    .category-table tbody td {
      padding: 15px;
      border-bottom: 1px solid #dee2e6;
      color: #2c3b4e;
    }
    .category-table .btn-primary {
      background-color: #2c3b4e;
      border-color: #2c3b4e;
      padding: 8px 16px;
      font-weight: 500;
      border-radius: 5px;
      margin-right: 5px;
    }
    .category-table .btn-primary:hover {
      background-color: #3b4a5a;
      border-color: #3b4a5a;
    }
    .category-table .btn-danger {
      background-color: #dc3545;
      border-color: #dc3545;
      padding: 8px 16px;
      font-weight: 500;
      border-radius: 5px;
    }
    .category-table .btn-danger:hover {
      background-color: #c82333;
      border-color: #bd2130;
    }
    /* Empty State */
    .empty-state {
      text-align: center;
      padding: 20px;
      color: #666;
      font-style: italic;
    }
    /* Validation Errors and Success Messages */
    .alert {
      border-radius: 5px;
      margin-bottom: 20px;
    }
    /* Responsive Design */
    @media (max-width: 768px) {
      .sidebar {
        width: 200px;
        transform: translateX(-200px);
      }
      .sidebar.active {
        transform: translateX(0);
      }
      .main-content {
        margin-left: 0;
      }
      .sidebar-toggle {
        display: block;
        position: fixed;
        top: 15px;
        left: 15px;
        font-size: 1.5rem;
        color: #2c3b4e;
        cursor: pointer;
        z-index: 1000;
      }
      .manage-card {
        padding: 20px;
      }
      .category-table thead th, .category-table tbody td {
        padding: 10px;
        font-size: 0.9rem;
      }
      .category-table .btn-primary, .category-table .btn-danger {
        padding: 6px 12px;
        font-size: 0.9rem;
      }
    }
    @media (min-width: 769px) {
      .sidebar-toggle {
        display: none;
      }
    }
  </style>
</head>
<body>
  <!-- Sidebar Toggle for Mobile -->
  <i class="fas fa-bars sidebar-toggle"></i>

  <!-- Sidebar -->
  <nav class="sidebar">
    <a class="navbar-brand" href="/dashboard">Badi Parking System</a>
    <ul class="nav flex-column">
      <% if (user) { %>
        <% if (user.permissions.entry || user.username === 'superadmin') { %>
          <li class="nav-item">
            <a class="nav-link" href="/entry"><i class="fas fa-sign-in-alt"></i> Entry</a>
          </li>
        <% } %>
        <% if (user.permissions.exit || user.username === 'superadmin') { %>
          <li class="nav-item">
            <a class="nav-link" href="/exit"><i class="fas fa-sign-out-alt"></i> Exit</a>
          </li>
        <% } %>
        <% if (user.permissions.manage || user.username === 'superadmin') { %>
          <li class="nav-item">
            <a class="nav-link active" href="/manage"><i class="fas fa-cogs"></i> Manage</a>
          </li>
        <% } %>
        <% if (user.permissions.profile || user.username === 'superadmin') { %>
          <li class="nav-item">
            <a class="nav-link" href="/profile"><i class="fas fa-user"></i> Profile</a>
          </li>
        <% } %>
        <% if (user.permissions.add_admin || user.username === 'superadmin') { %>
          <li class="nav-item">
            <a class="nav-link" href="/add-admin"><i class="fas fa-user-plus"></i> Add Admin</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/manage-admins"><i class="fas fa-users-cog"></i> Manage Admins</a>
          </li>
        <% } %>
        <li class="nav-item">
          <a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
        </li>
      <% } %>
    </ul>
  </nav>

  <!-- Main Content -->
  <div class="main-content">
    <div class="page-header">
      <h2>Manage Parking System</h2>
    </div>

    <% if (error) { %>
      <div class="alert alert-danger text-center"><%= error %></div>
    <% } %>
    <% if (success) { %>
      <div class="alert alert-success text-center"><%= success %></div>
    <% } %>

    <!-- Set Lot Spaces -->
    <div class="manage-card">
      <h4>Set Parking Lot Spaces</h4>
      <form action="/manage/set-lot-spaces" method="POST">
        <div class="form-group">
          <label for="total_spaces">Total Spaces</label>
          <input type="number" class="form-control" id="total_spaces" name="total_spaces" required>
        </div>
        <button type="submit" class="btn btn-primary">Set Spaces</button>
      </form>
    </div>

    <!-- Add/Edit Category -->
    <div class="manage-card">
      <h4><%= editCategory ? 'Edit Category' : 'Add New Category' %></h4>
      <form action="<%= editCategory ? '/manage/edit/' + editCategory.id : '/manage/add-category' %>" method="POST">
        <div class="form-group">
          <label for="name">Category Name</label>
          <input type="text" class="form-control" id="name" name="name" value="<%= editCategory ? editCategory.name : '' %>" required>
        </div>
        <div class="form-group">
          <label for="spaces_per_vehicle">Spaces per Vehicle</label>
          <input type="number" class="form-control" id="spaces_per_vehicle" name="spaces_per_vehicle" value="<%= editCategory ? editCategory.spaces_per_vehicle : '1' %>" required>
        </div>
        <div class="form-group">
          <label for="pricing_type">Pricing Type</label>
          <select class="form-control" id="pricing_type" name="pricing_type" required>
            <option value="hourly" <%= editCategory && editCategory.pricing_type === 'hourly' ? 'selected' : '' %>>Hourly</option>
            <option value="per-entry" <%= editCategory && editCategory.pricing_type === 'per-entry' ? 'selected' : '' %>>Per Entry</option>
          </select>
        </div>
        <div class="form-group">
          <label for="price">Price</label>
          <input type="number" step="0.01" class="form-control" id="price" name="price" value="<%= editCategory ? editCategory.price : '0' %>" required>
        </div>
        <button type="submit" class="btn btn-primary mr-2"><%= editCategory ? 'Update Category' : 'Add Category' %></button>
        <% if (editCategory) { %>
          <a href="/manage" class="btn btn-secondary">Cancel</a>
        <% } %>
        <% if (validationErrors && validationErrors.length > 0) { %>
          <div class="alert alert-danger mt-2">
            <% validationErrors.forEach(error => { %>
              <p><%= error %></p>
            <% }) %>
          </div>
        <% } %>
      </form>
    </div>

    <!-- Categories Table -->
    <div class="manage-card">
      <h4>Vehicle Categories</h4>
      <table class="category-table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Spaces per Vehicle</th>
            <th>Pricing Type</th>
            <th>Price</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (categories && categories.length > 0) { %>
            <% categories.forEach(category => { %>
              <tr>
                <td><%= category.name %></td>
                <td><%= category.spaces_per_vehicle %></td>
                <td><%= category.pricing_type.charAt(0).toUpperCase() + category.pricing_type.slice(1) %></td>
                <td>PKR <%= category.price.toFixed(2) %></td>
                <td>
                  <a href="/manage/edit/<%= category.id %>" class="btn btn-primary">Edit</a>
                  <form action="/manage/delete/<%= category.id %>" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this category?');">Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="5" class="empty-state">No categories found.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Footer -->
  <footer class="bg-dark text-white text-center py-3 mt-4" style="position: fixed; bottom: 0; width: calc(100% - 250px); margin-left: 250px;">
    <p>Â© <%= new Date().getFullYear() %> Badi Parking Management System. All rights reserved.</p>
  </footer>

  <!-- Bootstrap JS and Sidebar Toggle Script -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    $(document).ready(function() {
      $('.sidebar-toggle').click(function() {
        $('.sidebar').toggleClass('active');
      });
    });
  </script>
</body>
</html>